 "source": [
  "# This version works perfectly above using render_mode=\"human\"\n",
  "# To generate a GIF and display it inside Jupyter/GitHub, use the following lines:\n",
  "\n",
  "import gym\n",
  "import imageio\n",
  "from IPython.display import Image\n",
  "\n",
  "env = gym.make(\"BipedalWalker-v3\", render_mode=\"rgb_array\")  # needed to capture frames\n",
  "observation, _ = env.reset()\n",
  "\n",
  "frames = []\n",
  "done = False\n",
  "\n",
  "while not done:\n",
  "    action = env.action_space.sample()\n",
  "    observation, reward, terminated, truncated, _ = env.step(action)\n",
  "    frames.append(env.render())  # capture frame for gif\n",
  "    if terminated or truncated:\n",
  "        done = True\n",
  "\n",
  "env.close()\n",
  "\n",
  "# Save as gif\n",
  "gif_path = \"bipedalwalker_episode.gif\"\n",
  "imageio.mimsave(gif_path, frames, fps=30)\n",
  "\n",
  "# Display gif inline in Jupyter (also renders in GitHub notebooks)\n",
  "Image(filename=gif_path)"
 ]
